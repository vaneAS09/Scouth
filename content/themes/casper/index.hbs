{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<div class="site-header-content outer{{#match @custom.header_style "Left aligned"}} left-aligned{{/match}}{{#unless @custom.show_publication_cover}}{{#match @custom.header_style "Hidden"}} no-content{{/match}}{{/unless}}">

    {{#if @custom.show_publication_cover}}
        {{#if @site.cover_image}}
            {{!-- This is a responsive image, it loads different sizes depending on device
            https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
            <img class="site-header-cover"
                srcset="{{img_url @site.cover_image size="s"}} 300w,
                        {{img_url @site.cover_image size="m"}} 600w,
                        {{img_url @site.cover_image size="l"}} 1000w,
                        {{img_url @site.cover_image size="xl"}} 2000w"
                sizes="100vw"
                src="{{img_url @site.cover_image size="xl"}}"
                alt="{{@site.title}}"
            />
        {{/if}}
    {{/if}}

    {{#match @custom.header_style "!=" "Hidden"}}
        <div class="site-header-inner inner">
            {{#unless @custom.show_logo_in_navigation}}
						<h1 class="site-title">{{@site.title}}</h1>
                {{!-- {{#if @site.logo}}
                    <img class="site-logo" src="{{@site.logo}}" alt="{{@site.title}}">
                {{else}}
                    <h1 class="site-title">{{@site.title}}</h1>
                {{/if}} --}}
            {{/unless}}
            {{#if @site.description}}
                <p class="site-description">{{@site.description}}</p>
            {{/if}}
        </div>
    {{/match}}

</div>
<br>
<h1 class="branch-titulo">Método Scout</h1>
<p class="branch-parrafo">
Es un sistema de autoeducación, progresivo y personalizado, complementado a la familia y el colegio, a partir de la interacción de varios elementos.
</p>
{{!-- The main content area --}}
<main id="site-main" class="site-main outer">
<div class="inner posts">

    <div class="post-feed">
        {{#foreach posts}}
            {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
            {{> "post-card"}}
        {{/foreach}}
    </div>

</div>

<div class="inner branches">
	<style>
		.branches {
			margin-top: 50px
		}
		.branches h1 {
			text-align: center;
		}
		.branches-content {
			padding: 0 10vw;
			display: flex;
			justify-content: center;
			flex-wrap: wrap;
			gap: 15px;
		}

        .branch-item{
            display: flex;
            align-items: center;
            flex-direction: column;
        }

        .branch-item span{
            font-size: 24px;
        }
        .branch-parrafo{
            font-size: 24px;
            text-align: center;
        }
        .branch-titulo{
            font-size: 36px;
            text-align: center;
            color: brown;
        }
		.branch-item img{
			width: 120px;
            height: 120px;
		}
	</style>
	<h1 class>Las ramas</h1>
	<div class="branches-content">
		<a href="/cachorros" class="branch-item">
            <img src="/assets/built/img/rama_cachorros.png" alt="">
            <span>Cachorros</span>
        </a>
		<a href="/lobatos" class="branch-item" >
            <img src="/assets/built/img/rama_lobatos.png" alt="">
             <span>Lobatos</span>
        </a>
		<a href="/webelos" class="branch-item">
            <img src="/assets/built/img/rama_webelos.png" alt="">
            <span>Webelos</span>
        </a>
        <a href="/tropa" class="branch-item">
            <img src="/assets/built/img/rama_tropa.png" alt="">
            <span>Tropa</span>
        </a>
		<a href="/rover" class="branch-item">
            <img src="/assets/built/img/rama_rover.png" alt="">
            <span>Rovers</span>
        </a>
		<a href="/jefatura" class="branch-item">
            <img src="/assets/built/img/rama_jefatura.png" alt="">
            <span>Jefatura</span>
        </a>
	</div>
</div>
</main>
